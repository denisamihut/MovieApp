<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="3dp" android:color="@color/yellow_neon_dark" />
            <solid android:color="@color/yellow_neon" android:exitFadeDuration="200" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="3dp" android:color="@color/grey_neon" />
            <solid android:color="@color/white" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>