<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="36dp" android:bottomRightRadius="36dp" android:topLeftRadius="36dp" android:topRightRadius="36dp" />
            <stroke android:width="2px" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:bottomLeftRadius="36dp" android:bottomRightRadius="36dp" android:topLeftRadius="36dp" android:topRightRadius="36dp" />
            <stroke android:width="2px" android:color="@color/black" />
        </shape>
    </item>
</selector>