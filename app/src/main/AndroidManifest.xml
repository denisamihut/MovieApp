<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.denimihut.movieApp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.denimihut.movieApp.app.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp"
        tools:targetApi="31">
        <activity
            android:name="com.denimihut.movieApp.ui.tab_activity.TabbedMainActivity"
            android:exported="false"
            android:label="@string/title_activity_tabbed_main"
            android:theme="@style/Theme.MovieApp.NoActionBar" />
        <activity
            android:name="com.denimihut.movieApp.SearchActivity"
            android:exported="false"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.MovieApp.NoActionBar" />
        <activity
            android:name="com.denimihut.movieApp.ui.actors.ActorsActivity"
            android:exported="false" />
        <activity
            android:name="com.denimihut.movieApp.ui.genres.GenresActivity"
            android:exported="false" />
        <activity
            android:name="com.denimihut.movieApp.ui.on_boarding.OnBoardingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.denimihut.movieApp.ui.splash_screen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.denimihut.movieApp.MainActivity"
            android:exported="true" />
    </application>

</manifest>